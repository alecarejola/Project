<%= render "shared/jumbotron", header: "Posts", tag_line: "Born for Corn", alignment: "text-center" %>

<div class="card mx-auto mt-3" style="width: 50%">
      <div class="card-header  bg-secondary text-light">Login
      </div>
      <div class="card-body">
            <%= form_tag "/login" do %>
                  <div class="form-group">
                        <label for="exampleInputEmail1">Username</label>
                        <%= text_field_tag :username, "",class: "form-control", placeholder: "Enter Username" %>
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                  </div>
                  <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <%= password_field_tag :password, "", class: "form-control", placeholder: "Enter Password" %>
                  </div>
            <%= submit_tag :login, class: "btn btn-danger" %>
            <% end %>
      </div>
</div>

